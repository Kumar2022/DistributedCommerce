{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "NotificationDb": "Host=localhost;Port=5432;Database=notification_db;Username=postgres;Password=postgres"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "notification-service",
    "ClientId": "notification-service",
    "EnableAutoCommit": false,
    "AutoOffsetReset": "earliest",
    "Topics": {
      "OrderEvents": "domain.order.events",
      "PaymentEvents": "domain.payment.events",
      "ShippingEvents": "domain.shipping.events",
      "NotificationEvents": "domain.notification.events"
    }
  },
  "Email": {
    "MockSend": true,
    "FromEmail": "noreply@distributedcommerce.com",
    "FromName": "Distributed Commerce",
    "SmtpHost": "localhost",
    "SmtpPort": "587",
    "SmtpUser": "",
    "SmtpPassword": ""
  },
  "Sms": {
    "MockSend": true,
    "TwilioAccountSid": "",
    "TwilioAuthToken": "",
    "TwilioPhoneNumber": ""
  },
  "Push": {
    "MockSend": true,
    "FirebaseServerKey": "",
    "FirebaseProjectId": ""
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/notification-service-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
