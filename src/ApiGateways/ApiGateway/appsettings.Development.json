{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Debug"
    }
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    }
  },
  
  "Authentication": {
    "Jwt": {
      "RequireHttpsMetadata": false
    }
  },
  
  "RateLimiting": {
    "FixedWindow": {
      "PermitLimit": 1000,
      "Window": "00:01:00"
    },
    "TokenBucket": {
      "TokenLimit": 10000,
      "ReplenishmentPeriod": "00:00:10",
      "TokensPerPeriod": 1000
    }
  }
}
