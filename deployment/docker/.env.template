# ==================================================
# Distributed Commerce - Environment Configuration
# ==================================================
# Copy this file to .env and fill in your actual values
# ==================================================

# Stripe Configuration (Payment Service)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid Configuration (Notification Service - Email)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Twilio Configuration (Notification Service - SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Firebase Configuration (Notification Service - Push Notifications)
FIREBASE_SERVER_KEY=your_firebase_server_key_here

# Optional: Override default ports
# API_GATEWAY_HTTP_PORT=5000
# API_GATEWAY_HTTPS_PORT=5001
# IDENTITY_SERVICE_PORT=5010
# ORDER_SERVICE_PORT=5020
# PAYMENT_SERVICE_PORT=5030
# INVENTORY_SERVICE_PORT=5040
# CATALOG_SERVICE_PORT=5050
# SHIPPING_SERVICE_PORT=5060
# NOTIFICATION_SERVICE_PORT=5070
# ANALYTICS_SERVICE_PORT=5080

# Optional: Database Configuration
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=DistributedCommerce

# Optional: Logging Level
# ASPNETCORE_LOGGING_LEVEL=Information
